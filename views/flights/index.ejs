<%- include('../partials/header') %>

<table id="list">
  <thead>
    <tr>
      <th> Airline </th>
      <th> Airport </th>
      <th> FlightNo</th>
      <th> Departs </th>
      <th></th>
    </tr>
  </thead>
  <tbody id="display">
    <% flights.forEach(function(f) { %>
      <tr>
        <td><%= f.airline %></td>
        <td><%= f.airport %></td>
        <td><%= f.flightNo %></td>
        <td><%= f.departs.toString().substring(0,15) %></td>
        <td><a href="/flights/<%= f._id %>">DETAILS</a></td>
      </tr>
      <% }); %>
    </tbody>
  </table>
  
<%- include('../partials/footer') %>